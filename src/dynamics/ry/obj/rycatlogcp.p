  DEFINE VARIABLE cValueList      AS CHARACTER    NO-UNDO.

  IF NOT isCreate() AND CAN-FIND(FIRST ryc_attribute 
              WHERE ryc_attribute.attribute_group_obj = b_ryc_attribute.attribute_group_obj
