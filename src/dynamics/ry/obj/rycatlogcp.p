PROCEDURE createPreTransValidate :
/*------------------------------------------------------------------------------
  Purpose:     Procedure used to validate records server-side before the transaction scope upon create
  Parameters:  <none>
  Notes:       
------------------------------------------------------------------------------*/

  DEFINE VARIABLE cMessageList    AS CHARACTER    NO-UNDO.
  DEFINE VARIABLE cValueList      AS CHARACTER    NO-UNDO.

  IF CAN-FIND(FIRST ryc_attribute 
              WHERE ryc_attribute.attribute_group_obj = b_ryc_attribute.attribute_group_obj
                AND ryc_attribute.attribute_label = b_ryc_attribute.attribute_label) THEN
  DO:
     ASSIGN
        cValueList   = STRING(b_ryc_attribute.attribute_group_obj) + ', ' + STRING(b_ryc_attribute.attribute_label)
        cMessageList = cMessageList + (IF NUM-ENTRIES(cMessageList,CHR(3)) > 0 THEN CHR(3) ELSE '':U) + 
                      {aferrortxt.i 'AF' '8' 'ryc_attribute' '' "'attribute_group_obj, attribute_label, '" cValueList }.
  END.


  IF CAN-FIND(FIRST ryc_attribute 
              WHERE ryc_attribute.attribute_label = b_ryc_attribute.attribute_label) THEN
  DO:
     ASSIGN
        cValueList   = STRING(b_ryc_attribute.attribute_label)
        cMessageList = cMessageList + (IF NUM-ENTRIES(cMessageList,CHR(3)) > 0 THEN CHR(3) ELSE '':U) + 
                      {aferrortxt.i 'AF' '8' 'ryc_attribute' '' "'attribute_label, '" cValueList }.
  END.

  ERROR-STATUS:ERROR = NO.
  RETURN cMessageList.

END PROCEDURE.

