        cMessageList = cMessageList + (IF NUM-ENTRIES(cMessageList,CHR(3)) > 0 THEN CHR(3) ELSE '':U) + 
                      {aferrortxt.i 'AF' '8' 'ryc_attribute' '' "'attribute_group_obj, attribute_label, '" cValueList }.
  END.


  IF NOT isCreate() AND CAN-FIND(FIRST ryc_attribute 
              WHERE ryc_attribute.attribute_label = b_ryc_attribute.attribute_label
                AND ROWID(ryc_attribute) <> TO-ROWID(ENTRY(1,b_ryc_attribute.RowIDent))) THEN
  DO:
     ASSIGN
        cValueList   = STRING(b_ryc_attribute.attribute_label)
        cMessageList = cMessageList + (IF NUM-ENTRIES(cMessageList,CHR(3)) > 0 THEN CHR(3) ELSE '':U) + 
                      {aferrortxt.i 'AF' '8' 'ryc_attribute' '' "'attribute_label, '" cValueList }.
